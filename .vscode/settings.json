{
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.sortImports": "explicit",
    },
    "files.associations": {
      "*.env": "env"
    },
    "[env]": {
        "editor.formatOnSave": false
    },
    "restoreTerminals.terminals": [
        {
          "splitTerminals": [
            {
              "name": "api",
              "commands": ["cd backend", "npm run dev"]
            },
            {
              "name": "auth",
              "commands": ["cd backend", "npm run devAuth"]
            },
            {
              "name": "socket",
              "commands": ["cd backend", "npm run devSocket"]
            },
            {
              "name": "frontend",
              "commands": ["cd frontend", "npm run dev"]
            }
          ]
        },
    ],
}
